<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="span12">
                <div class="inner-heading">
                    <ul class="breadcrumb">
                        <li><a href="index.html">Home</a> <i class="icon-angle-right"></i></li>
                        <li class="active">Blog right sidebar</li>
                    </ul>
                    <h2>Blog right sidebar</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="content">
    <div class="container">
        <div class="row">

            <div class="span8">
                <article>
                    <div class="row">
                        @foreach (var item in Model)
                        {

                            <div class="span8">
                                <div class="post-image">
                                    <div class="post-heading">
                                        <h3><a href="#">@item.BlogName</a></h3>
                                    </div>

                                    <img src="/images/@item.Images" alt="" />
                                </div>
                                <div class="meta-post">
                                    <ul>
                                        <li><i class="icon-file"></i></li>
                                        <li>On <a href="#" class="date">@item.PublishDate</a></li>
                                    </ul>
                                </div>
                                <div class="post-entry">
                                    <p>
                                        @if (item.Explanation.Length < 250)
                                        {
                                            @Html.Raw(item.Explanation)
                                        }
                                        else
                                        {
                                            @Html.Raw(item.Explanation.Substring(0,250))
                                        }
                                    </p>
                                    <a href="#" class="readmore">Read more <i class="icon-angle-right"></i></a>
                                </div>
                            </div>
                        }

                    </div>
                </article>


            </div>

            <div class="span4">

                <aside class="right-sidebar">

                    <div class="widget">
                        <form>
                            <div class="input-append">
                                <input class="span2" id="appendedInputButton" type="text" placeholder="Type here">
                                <button class="btn btn-theme" type="submit">Search</button>
                            </div>
                        </form>
                    </div>

                    <div class="widget">

                        <h5 class="widgetheading">Categories</h5>

                        <ul class="cat">
                            <li><i class="icon-angle-right"></i> <a href="#">Web design</a><span> (20)</span></li>
                            <li><i class="icon-angle-right"></i> <a href="#">Online business</a><span> (11)</span></li>
                            <li><i class="icon-angle-right"></i> <a href="#">Marketing strategy</a><span> (9)</span></li>
                            <li><i class="icon-angle-right"></i> <a href="#">Technology</a><span> (12)</span></li>
                            <li><i class="icon-angle-right"></i> <a href="#">About finance</a><span> (18)</span></li>
                        </ul>
                    </div>

                </aside>
            </div>

        </div>
    </div>
</section>
