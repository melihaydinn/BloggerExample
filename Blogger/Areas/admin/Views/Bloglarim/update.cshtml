<a href="/admin/Bloglarim" class="btn btn-primary" style="margin-bottom:15px;">Geri Git</a>

<form action="/admin/bloglarim/update/@Model.id" method="post" enctype="multipart/form-data">

    <div class="col-md-12" style="margin-bottom:15px;">
        <input type="text" name="BlogName" value="@Model.BlogName" class="form-control" />
    </div>

    <div class="col-md-12" style="margin-bottom:15px;">
        <img src="/images/@Model.Images" width="150" />
        <input type="file" class="form-control" />
    </div>

    <div class="col-md-12" style="margin-bottom:15px;">
        <textarea class="form-control" style="height:150px" name="Explanation">@Model.Explanation</textarea>
    </div>

    <button type="submit" class="form-control btn btn-primary">Güncelle</button>

</form>
@if (ViewBag.Messages != null)
{
    <div class="alert alert-info">@ViewBag.Messages</div>
}