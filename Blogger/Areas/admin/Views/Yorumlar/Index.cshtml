
<table class="table table-bordered" style="margin-bottom:15px">

    <thead>
        <tr>
            <td>id</td>
            <td>Yorum Yapan</td>
            <td>Yorum</td>
            <td>Yorum Tarihi</td>
            <td>Email</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.Commenter</td>
                <td>@item.CommentText</td>
                <td>@item.CommentDate</td>
                <td>@item.Email</td>
            </tr>
        }
    </tbody>

</table>